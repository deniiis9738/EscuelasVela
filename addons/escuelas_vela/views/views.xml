        <!-- Vistas para el modelo Escuela -->
        <record model="ir.ui.view" id="escuelas_vela.escuela_tree">
            <field name="name">escuela.tree</field>
            <field name="model">escuelas_vela.escuela</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
